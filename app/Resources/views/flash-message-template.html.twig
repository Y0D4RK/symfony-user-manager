{% set alertDismissible = alertDismissible is defined ? alertDismissible : false %}

{% set alertId = alertId is defined ? alertId : '' %}

{% set alertStyle = alertStyle is defined ? 'alert-' ~ alertStyle : 'alert-success' %}

{% set textAlign = textAlign is defined ? 'text-' ~ textAlign : '' %}

{% for message in app.flashes(alertType) %}
    <div class="alert {{ alertDismissible ? 'alert-dismissible' }} {{ alertStyle }}" role="alert" id="{{ alertId }}">
        {% if alertDismissible %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        {% endif %}
        <p class="{{ textAlign }} m-0">{{ message }}</p>
    </div>
{% endfor %}
