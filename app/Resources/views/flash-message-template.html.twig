{% if alertDismissible is not defined %}
    {% set alertDismissible = false %}
{% endif %}

{% if alertId is not defined %}
    {% set alertId = '' %}
{% endif %}

{% if alertStyle is not defined %}
    {% set alertStyle = 'alert-success' %}
{% else %}
    {% set alertStyle = 'alert-' ~ alertStyle %}
{% endif %}

{% if textAlign is defined %}
    {% set textAlign = 'text-' ~ textAlign %}
{% else %}
    {% set textAlign = '' %}
{% endif %}

{% for message in app.flashes(alertType) %}
    <div class="alert {{ alertDismissible ? 'alert-dismissible' }} {{ alertStyle }}"role="alert" id="{{ alertId }}">
        {% if alertDismissible %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        {% endif %}
        <p class="{{ textAlign }} m-0">{{ message }}</p>
    </div>
{% endfor %}
