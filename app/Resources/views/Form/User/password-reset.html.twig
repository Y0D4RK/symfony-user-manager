<div class="row">
    {{ form_start(form, {
        'method': 'post',
        'attr': {'class': 'col p-0'}
    }) }}

    <div class="col mt-3">
        {{ form_label(form.password.first) }}
        {{ form_widget(form.password.first) }}
    </div>
    <div class="col mt-3">
        {{ form_label(form.password.second) }}
        {{ form_widget(form.password.second) }}
    </div>

    <div class="col mt-3">
        <input type="submit" value="{{ 'global.form.submit'|trans }}"/>
    </div>

    {{ form_end(form) }}
</div>
